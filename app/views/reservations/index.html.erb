<h1>Listing reservations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Flight</th>
    <th>Travels on</th>
    <th>Card number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.user_id %></td>
    <td><%= reservation.flight_id %></td>
    <td><%= reservation.travels_on %></td>
    <td><%= reservation.card_number %></td>
    <td><%= link_to 'Show', user_reservation_url(@user.id, reservation) %></td>
  </tr>
<% end %>
</table>

